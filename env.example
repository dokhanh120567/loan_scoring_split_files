# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=loan_scoring

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Model Configuration
MODEL_PATH=model/xgboost_model.json
ENCODER_PATH=model/onehot_encoder.joblib
SCALER_PATH=model/standard_scaler.joblib
FEATURES_PATH=model/feature_names.joblib

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]

# Feature Flags
ENABLE_SHAP=true
ENABLE_LOGGING=true
ENABLE_METRICS=true

# Thresholds
APPROVAL_THRESHOLD=0.5
MAX_BATCH_SIZE=1000 